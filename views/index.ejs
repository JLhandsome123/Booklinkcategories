<!DOCTYPE html>
<html lang="en">
<head> 
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Category List</title>
</head>

  
<body>
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container-fluid">
          <!-- Brand Name -->
          <a class="navbar-brand" href="/">
            <span style="color: #ff6600; font-weight: bold;">BOOK</span><span style="color: black;">LINK</span>
          </a>
      
          <!-- Toggler for Small Screens -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
      
          <!-- Collapsible Navbar Content -->
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav me-auto">
              <!-- Navigation Links -->
              
              <li class="nav-item">
                <a class="nav-link" href="/">Categories</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/addCategory">Add New Category</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Services</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Contact</a>
              </li>
            </ul>
            <!-- Shopping Cart -->
            <a href="#" class="navbar-text" style="font-size: 1.2rem; color: #333;">
              <i class="bi bi-cart"></i> Shopping Cart
            </a>
          </div>
        </div>
      </nav>
  
  
  
  <h2>Categories</h2>

  <div class="container my-4">
    <% categories.forEach(category => { %>
      <div class="mb-5">
        <!-- Category Name -->
        <h3><%= category.categoryName %></h3>

        <!-- Products within the category -->
        <div class="row mb-3">
          <% if (category.products && category.products.length > 0) { %>
            <% category.products.forEach(product => { %>
              <div class="col-md-3">
                <div class="card">
                  <img src="<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
                  <div class="card-body">
                    <h5 class="card-title">Product: <%= product.productName %></h5>
                    <p class="card-text">Price: $<%= product.price %></p>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-muted">No products available.</p>
          <% } %>
        </div>
      

        <!-- Category Actions -->
        <div>
          <a href="/editCategory/<%= category.categoryId %>" class="btn btn-warning">Edit Category</a>
          <a href="/deleteCategory/<%= category.categoryId %>" 
             onclick="return confirm('Are you sure you want to delete this category (<%= category.categoryName %>)?')" 
             class="btn btn-danger">Delete Category</a>
          <a href="/addProduct/<%= category.categoryId %>" class="btn btn-primary">Add New Product</a>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
